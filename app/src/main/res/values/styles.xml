<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="style_playerName">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="style_playerName_cal_result">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:paddingRight">13dp</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="style_receipt_kind">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="style_receipt_pay">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="style_receipt_unit">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">top</item>
    </style>


    <style name="style_game_surplus">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="style_game_surplus.title">
        <item name="android:textSize">25sp</item>
    </style>
    <style name="style_game_surplus.sum">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="style_game_surplus.amount">
        <item name="android:textSize">23sp</item>
    </style>
    <style name="style_game_deficit">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="style_game_deficit.title">
        <item name="android:textSize">25sp</item>
    </style>
    <style name="style_game_deficit.sum">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="style_game_deficit.amount">
        <item name="android:textSize">23sp</item>
    </style>


    <style name="style_game_assign_info">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="style_game_assign_ex">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>
    <style name="style_game_assign_ex.surplus">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginLeft">5dp</item>

    </style>
    <style name="style_game_assign_ex.deficit">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginLeft">3dp</item>
    </style>

    <style name="style_cal_result">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="style_cal_result.amount">
        <item name="android:textAlignment">textEnd</item>
    </style>
    <style name="style_cal_result.unit">
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:textAlignment">center</item>

    </style>


</resources>